{
  "name": "deinternetjongens/lighthouse-utils",
  "description": "A Laravel Lighthouse addon with several utilities to automatically generate an awesome GraphQL API",
  "license": "MIT",
  "keywords": [
    "lighthouse",
    "generators",
    "GraphQL"
  ],
  "type": "library",
  "authors": [
    {
      "name": "De Internet Jongens",
      "email": "support@deinternetjongens.nl"
    }
  ],
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "orchestra/testbench": "~3.6.0",
    "phpunit/phpunit": "~7.0",
    "squizlabs/php_codesniffer": "^3.3",
    "illuminate/support": "~5.6.0",
    "nuwave/lighthouse": "^2.2-beta1"
  },
  "autoload": {
    "psr-4": {
      "DeInternetJongens\\LighthouseUtils\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DeInternetJongens\\LighthouseUtils\\Tests\\": "tests"
    },
    "files": [
      "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
    ]
  },
  "scripts": {
    "phpunit": "phpunit"
  },
  "extra": {
    "laravel": {
      "providers": [
        "DeInternetJongens\\LighthouseUtils\\ServiceProvider"
      ]
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
